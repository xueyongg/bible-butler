{
    "compilerOptions": {
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ],
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "removeComments": true,
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types",
        "./*.ts"
    ],
    "settings": {
        "typescript.reportStyleChecksAsWarnings": false
    }
}